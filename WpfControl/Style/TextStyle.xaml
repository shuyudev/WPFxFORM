<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="DefaultFont">Segoe UI Light</FontFamily>
    <Brush x:Key="WhiteBrush">#FFFFFF</Brush>
    <Brush x:Key="CyanBrush">#28A8E0</Brush>
    <Brush x:Key="BlueBrush">#0E69B2</Brush>
    <Brush x:Key="RedBrush">#CC0033</Brush>
    <Brush x:Key="GreenBrush">#4CB45E</Brush>

    <Style x:Key="HeaderLabelStyle" TargetType="Control">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}" />
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
    </Style>

    <Style x:Key="H1LabelStyle" TargetType="Control" BasedOn="{StaticResource HeaderLabelStyle}">
        <Setter Property="FontSize" Value="60" />
    </Style>

    <Style x:Key="H2LabelStyle" TargetType="Control" BasedOn="{StaticResource HeaderLabelStyle}">
        <Setter Property="FontSize" Value="49" />
    </Style>

    <Style x:Key="H3LabelStyle" TargetType="Control" BasedOn="{StaticResource HeaderLabelStyle}">
        <Setter Property="FontSize" Value="20" />
    </Style>
</ResourceDictionary>